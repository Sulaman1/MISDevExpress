@model DAL.Models.Domain.ToolApp.ToolControl
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using Constant.Constants

@{
    ViewData["Title"] = "Index";
    ViewBag.pageTitle = "M&E";
    ViewBag.Title = "Tool";
    ViewBag.pTitle = "Tool";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}


@if (true)//AuthorizationService.AuthorizeAsync(User, Permissions.Administrator.View).Result.Succeeded)
{
    <!-- DataTables -->
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables.net-autoFill-bs4/css/autoFill.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables.net-keytable-bs4/css/keyTable.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Responsive datatable examples -->
    <link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <div class="checkout-tabs">
        <div class="row">          
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-gen-ques" role="tabpanel" aria-labelledby="v-pills-gen-ques-tab">
                                <div class="alert alert-info" style="padding: .40rem 1.25rem" role="alert">
                                    <h4 class="mt-2 card-title">List of Tool Control</h4>
                                </div>
                            <form class="form-inline" asp-action="AddControl">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ToolId" />
                                <input type="hidden" asp-for="IsActive" />
                                <input type="hidden" asp-for="Value" />
                                <input type="hidden" asp-for="OrderNo" />
                                <div class="form-group">
                                    <label asp-for="ControlId" class="sr-only"></label>
                                    <select asp-for="ControlId" class="form-control  mb-2 mr-sm-3" asp-items="ViewBag.ControlId"></select>
                                    <span asp-validation-for="ControlId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name" class="sr-only"></label>
                                    <input asp-for="Name" class="form-control  mb-2 mr-sm-3" placeholder="Enter Control Title (Heading)" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Add" class="btn btn-primary mb-2" />
                                </div>
                            </form>
                            <div id="dynamicContentContainer"></div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>    
}
else
{
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mb-5">
                        <h1 class="display-2 font-weight-medium">4<i class="bx bx-buoy bx-spin text-primary display-3"></i>4</h1>
                        <h4 class="text-uppercase">Sorry, Access denied!</h4>
                        <h6>Contact with IT Administrator</h6>
                        @*<div class="mt-5 text-center">
                                <a class="btn btn-primary waves-effect waves-light" href=@Url.Action("Index", "index")>Back to Dashboard</a>
                            </div>*@
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div>
                        <img src="~/assets/images/error-img.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section scripts{
    <script>
        $(document).ready(function () {
            $.get('@Url.Action("_Index","Tools", new { id=Model.ToolId })', function (content) {
                $("#dynamicContentContainer").html(content);
                //notificationme('Fetch Record Successfully!');
            });
        });       
    </script>
}