@model IEnumerable<DAL.Models.Domain.HTSModule.HTSStage>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using Constant.Constants
<div class="row">
    @foreach (var item in Model)
    {


        <div class="col-lg-4">
            <div class="card mini-stats-wid">
                <div class="card-body" style="background-color:#E5E4E2">
                    <div class="d-flex flex-wrap">
                        <div class="mr-3">
                            <h5 class="mb-0">Installment-@item.InstallmentNo</h5>
                            @if (item.HTS.IsCompleted == false && AuthorizationService.AuthorizeAsync(User, Permissions.HTS.Edit).Result.Succeeded)
                            {
                                <a asp-action="Edit" asp-route-id="@item.HTSStageId"><i class="mdi mdi-pencil font-size-18"></i></a>
                            }                            
                            @*<p class="text-muted mb-2">@item.InstallmentNo</p>*@
                            @*<div data-toggle="modal" data-target="#myModal" onclick="createModal('@item.StageAttachment')" class="btn btn-info btn-sm"><i class="bx bxs-file label-icon"></i> View</div>*@
                            <p>Release Amount: @item.AmountPaid</p>
                            <p class="mb-0"><a data-toggle="modal" data-target="#myModal2" onclick="createModal2('@item.Picture1')" class="btn btn-info btn-sm">Picture-1 </a> &nbsp; &nbsp; &nbsp; &nbsp; <a data-toggle="modal" data-target="#myModal2" onclick="createModal2('@item.Picture2')" class="btn btn-info btn-sm">Picture-2</a></p>
                        </div>
                        <div class="avatar-sm ml-auto">
                            <div style="cursor:pointer" data-toggle="modal" data-target="#myModal" onclick="createModal('@item.StageAttachment')" class="avatar-title bg-light rounded-circle text-primary font-size-20">
                                <i class="mdi mdi-attachment"></i>
                            </div>
                        </div>
                    </div>                  
                </div>
            </div>
        </div>
    }

</div>
