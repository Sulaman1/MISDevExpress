                                            <div class="form-group">
                                                <label asp-for="TotalHousehold" class="control-label"></label>
                                                <input asp-for="TotalHousehold" class="form-control" />
                                                <span asp-validation-for="TotalHousehold" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="HHParticipated" class="control-label"></label>
                                                <input asp-for="HHParticipated" class="form-control" />
                                                <span asp-validation-for="HHParticipated" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Venue" class="control-label"></label>
                                                <input asp-for="Venue" class="form-control" />
                                                <span asp-validation-for="Venue" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="OfficerName" class="control-label"></label>
                                                <input asp-for="OfficerName" class="form-control" readonly="readonly"/>
                                                <span asp-validation-for="OfficerName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="CIAccount" class="control-label"></label>
                                                <input asp-for="CIAccount" class="form-control" />
                                                <span asp-validation-for="CIAccount" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Latitude" class="control-label"></label>
                                                <input asp-for="Latitude" class="form-control" />
                                                <span asp-validation-for="Latitude" class="text-danger"></span>
                                            </div>
                                        </div>
                                         <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Longitute" class="control-label"></label>
                                                <input asp-for="Longitute" class="form-control" />
                                                <span asp-validation-for="Longitute" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                           <div class="form-group">
                                                <label asp-for="SeletionFormAttachment" class="control-label"></label>
                                                <input type="file" name="SeletionFormAttachment" class="form-control" accept="application/pdf"/>
                                                <span asp-validation-for="SeletionFormAttachment" class="text-danger"></span>
                                            </div>
                                        </div>
                                         <div class="col-md-4">
                                           <div class="form-group">
                                                <label asp-for="VillageProfileAttachment" class="control-label"></label>
                                                <input type="file" name="VillageProfileAttachment" class="form-control" accept="application/pdf"/>
                                                <span asp-validation-for="VillageProfileAttachment" class="text-danger"></span>
                                            </div>
                                        </div>
                                          <div class="col-md-4">
                                           <div class="form-group">
                                                <label asp-for="TOPAttachment" class="control-label"></label>
                                                <input type="file" name="TOPAttachment" class="form-control" accept="application/pdf"/>
                                                <span asp-validation-for="TOPAttachment" class="text-danger"></span>
                                            </div>
                                        </div>
                                         @{
                                            if(Model.SeletionFormAttachment != null)
                                            {
                                                <div class="col-md-4">
                                                    <div class="form-group" style="margin-bottom:0.5rem">
                                                        <label class="control-label">Uploaded Seletion Form</label>                                                        
                                                    </div>
                                                    <div class="form-group">
                                                        <div data-toggle="modal" data-target="#myModal" onclick="createModal('@Model.SeletionFormAttachment')" class="btn btn-info btn-sm"><i class="bx bxs-file label-icon"></i> View</div>                                                        
                                                    </div>
                                                </div>                                                
                                            }
                                        }   
                                        
                                        @{
                                            if(Model.VillageProfileAttachment != null)
                                            {
                                                <div class="col-md-4">
                                                    <div class="form-group" style="margin-bottom:0.5rem">
                                                        <label class="control-label">Uploaded Village Profile</label>                                                        
                                                    </div>
                                                    <div class="form-group">
                                                        <div data-toggle="modal" data-target="#myModal" onclick="createModal('@Model.VillageProfileAttachment')" class="btn btn-info btn-sm"><i class="bx bxs-file label-icon"></i> View</div>                                                        
                                                    </div>
                                                </div>                                                
                                            }
                                        }   
                                       
                                         @{
                                            if(Model.TOPAttachment != null)
                                            {
                                                <div class="col-md-4">
                                                    <div class="form-group" style="margin-bottom:0.5rem">
                                                        <label class="control-label">Uploaded Term of Partnership</label>                                                        
                                                    </div>
                                                    <div class="form-group">
                                                        <div data-toggle="modal" data-target="#myModal" onclick="createModal('@Model.TOPAttachment')" class="btn btn-info btn-sm"><i class="bx bxs-file label-icon"></i> View</div>                                                        
                                                    </div>
                                                </div>                                                
                                            }
                                        }  
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="OnDate" class="control-label"></label>
                                                <input asp-for="OnDate" class="form-control" />
                                                <span asp-validation-for="OnDate" class="text-danger"></span>
                                            </div>
                                              <div class="form-group">
                                                <input type="submit" value="Save" class="btn btn-primary" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Gender" class="control-label"></label>
                                                <select asp-for="Gender" asp-items="@gender" class="form-control"></select>
                                                <span asp-validation-for="Gender" class="text-danger"></span>
                                            </div>
                                        </div>
                                        @{
                                            @if (AuthorizationService.AuthorizeAsync(User, Permissions.Administrator.View).Result.Succeeded){
                                                <div class="col-md-4">
                                                    <div class="form-group custom-checkbox-danger">
                                                        <label asp-for="IsVerified" class="control-label"></label>
                                                        <input asp-for="IsVerified" class="form-control text-danger" />
                                                        <span asp-validation-for="IsVerified" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            }else{
                                                <input type="hidden" asp-for="IsVerified">
                                            }
                                        }
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="v-pills-support" role="tabpanel" aria-labelledby="v-pills-support-tab">
                                <h4 class="card-title mb-5">Support</h4>

                                <div class="faq-box media mb-4">
                                    <div class="faq-icon mr-3">
                                        <i class="bx bx-help-circle font-size-20 text-success"></i>
                                    </div>
                                    <div class="media-body">
