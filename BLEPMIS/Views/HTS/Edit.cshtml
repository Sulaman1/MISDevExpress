                                            <h4 class="mt-2 card-title">Edit HTS</h4>
                                        </div>
                                    </div>
                                </div>
                                <form asp-action="Edit" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input type="hidden" asp-for="HTS.HTSId"/>
