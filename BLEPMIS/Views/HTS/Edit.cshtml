                                                        <div class="form-group">
                                                            <div data-toggle="modal" data-target="#myModal" onclick="createModal('@Model.HTS.ApplicationFormAttachment')" class="btn btn-info btn-sm"><i class="bx bxs-file label-icon"></i> View</div>
                                                        </div>                                                    
                                                }
                                            }
