                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="HTS.IsCompleted" /> @Html.DisplayNameFor(model => model.HTS.IsCompleted)
                                                </label>
                                            </div>
                                        </div>
                                        </div>
                                    <div class="alert alert-info" style="padding: .40rem 1.25rem" role="alert">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <h4 class="mt-2 card-title">Attachments</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="HTS.CNICAttachment" class="control-label"></label>
                                                <input type="file" name="CNICAttachment" class="form-control" accept="application/pdf" />
