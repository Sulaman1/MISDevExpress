                                                <span asp-validation-for="HTS.TunnelSiteSuitabilityFormAttachment" class="text-danger"></span>
                                            </div>
                                            @{
                                                if (Model.HTS.TunnelSiteSuitabilityFormAttachment != null)
                                                {
                                                    
                                                        <div class="form-group" style="margin-bottom:0.5rem">
                                                            <label class="control-label">Uploaded Attachment</label>
                                                        </div>
                                                        <div class="form-group">
                                                            <div data-toggle="modal" data-target="#myModal" onclick="createModal('@Model.HTS.TunnelSiteSuitabilityFormAttachment')" class="btn btn-info btn-sm"><i class="bx bxs-file label-icon"></i> View</div>
                                                        </div>
                                                    
                                                }
                                            }
                                           
                                            @{
                                                if(Model.HTS.IsCompleted == false)
                                                {
                                                    <div class="form-group">
                                                        <input type="submit" value="Submit" class="btn btn-primary" />
                                                    </div>
                                                }
                                            }                                            
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
