<link href="~/https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" type="text/css" />
@{
    int total = Model.Count();
    int male = Model.Where(a => a.Gender == "Male").Count();
    int female = Model.Where(a => a.Gender == "Female").Count();
   // total == 0 ? 1 : total;
}
<div class="row">
    <div class="col-md-3">
        <div class="card mini-stats-wid">
            <div class="card-body">
                <div class="media">
                    <div class="media-body">
                        <p class="text-muted font-weight-medium font-size-14">Total Refugees</p>
                        <h4 class="mb-3">@total</h4>
                        <span class="badge badge-soft-info font-size-14"> @(total == 0 ? 0 : (total * 100 / total)) %</span> <span class="ml-2 text-truncate text-muted font-weight-bold"></span>
                    </div>
                    <div class="text-center">
                        <span class="badge badge-pill badge-soft-success font-size-14">4000</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mini-stats-wid">
            <div class="card-body">
                <div class="media">
                    <div class="media-body">
                        <p class="text-muted font-weight-medium font-size-14">Total Trained</p>
                        <h4 class="mb-3">@total</h4>
                        <span class="badge badge-soft-info font-size-14"> @(total == 0 ? 0 : (total * 100 / total)) %</span> <span class="ml-2 text-truncate text-muted font-weight-bold"></span>
                    </div>
                    <div class="text-center">
                        <span class="badge badge-pill badge-soft-success font-size-14">4000</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mini-stats-wid">
            <div class="card-body">
                <div class="media">
                    <div class="media-body">
                        <p class="text-muted font-weight-medium font-size-14">Male Refugees</p>
                        <h4 class="mb-3">@male</h4>
                        <span class="badge badge-soft-info font-size-14"> @(male==0?0:(male * 100 / total)) %</span> <span class="ml-2 text-truncate text-muted font-weight-bold"></span>
                    </div>
                    <div class="text-center">
                        <span class="badge badge-pill badge-soft-success font-size-14">1120</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mini-stats-wid">
            <div class="card-body">
                <div class="media">
                    <div class="media-body">
                        <p class="text-muted font-weight-medium font-size-14">Total Females</p>
                        <h4 class="mb-3">@female</h4>
                        <span class="badge badge-soft-info font-size-14"> @(female==0?0:(female * 100 /total )) %</span> <span class="ml-2 text-truncate text-muted font-weight-bold"></span>
                    </div>
                    <div class="text-center">
                        <span class="badge badge-pill badge-soft-success font-size-14">2880</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<table id="datatable" class="table table-bordered" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LIPCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FatherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNIC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CellNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @* <th>
            @Html.DisplayNameFor(model => model.Village.UnionCouncil)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Village.UnionCouncil.Tehsil)
            </th>*@
            @* <th>
            @Html.DisplayNameFor(model => model.IdentifiedBy)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.PackageName)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LIPCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNIC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*  <td>
            @Html.DisplayFor(modelItem => item.Member.Village.UnionCouncil.UnionCouncilName)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Member.Village.UnionCouncil.Tehsil.TehsilName)
            </td>*@
                @*  <td>
            @Html.DisplayFor(modelItem => item.IdentifiedBy.Name)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.PackageName)
                </td>
                <td>
                    <a asp-action="Print" asp-route-id="@item.LIPAssetTransferId" target="_blank" class="mr-2 text-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="View">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

