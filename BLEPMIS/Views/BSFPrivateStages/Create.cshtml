</div>
        <div class="row">            
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-privacy" role="tabpanel" aria-labelledby="v-pills-privacy-tab">
                                <div class="alert alert-info" style="padding: .40rem 1.25rem" role="alert">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            Business Support Facility - Status:
                                            @if (ViewBag.IsCompleted == true)
                                            {
                                                <span class="badge badge-pill badge-soft-success font-size-11">Complete</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-pill badge-soft-primary font-size-11">In Process</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                @{
                                    if(ComletedStage > 0)
                                    {
                                        <div class="alert alert-success" style="padding: .40rem 1.25rem" role="alert">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <h4 class="mt-2 card-title">List of Complete Stage</h4>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }                                
                                <div id="dynamicContentContainer"></div>
                                @if (ViewBag.IsCompleted == false && AuthorizationService.AuthorizeAsync(User, Permissions.BSFGovt.Create).Result.Succeeded)
                                {
                                    <div class="alert alert-info" style="padding: .40rem 1.25rem" role="alert">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <h4 class="mt-2 card-title">Upload Up Coming Stage</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <form asp-action="Create" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <input asp-for="UserId" type="hidden" />
                                                <input asp-for="CreatedBy" type="hidden" />
                                                <input asp-for="BSFPrivateId" type="hidden" />
                                                <input asp-for="StageNumber" type="hidden" />
                                                <input asp-for="AmountRelease" type="hidden" />
                                                <div class="form-group">
                                                    <label asp-for="StageName" class="control-label"></label>
                                                    <input asp-for="StageName" class="form-control" />
                                                </div>
                                            </div>
                                            @*<div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="AmountRelease" class="control-label"></label>
                                                    <input asp-for="AmountRelease" class="form-control" type="number" max="@ViewBag.MaxRelease" />
                                                    <span asp-validation-for="AmountRelease" class="text-danger"></span>
                                                </div>
                                            </div>*@

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="StageAttachment" class="control-label"></label>
                                                    <input type="file" name="StageAttachment" class="form-control" accept="application/pdf" required />
                                                    <span asp-validation-for="StageAttachment" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="BeforeAttachment" class="control-label"></label>
                                                    <input type="file" name="BeforeAttachment" class="form-control" accept="application/pdf" required />
                                                    <span asp-validation-for="BeforeAttachment" class="text-danger"></span>
                                                </div>                                               
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="AfterAttachment" class="control-label"></label>
                                                    <input type="file" name="AfterAttachment" class="form-control" accept="application/pdf" required />
                                                    <span asp-validation-for="AfterAttachment" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <input type="submit" value="Add Stage" class="btn btn-primary" />
                                                    <a asp-controller="BSFPrivates" asp-action="Index">Back to List</a>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="OnDate" class="control-label"></label>
                                                    <input asp-for="OnDate" class="form-control" required/>
                                                    <span asp-validation-for="OnDate" class="text-danger"></span>
                                                </div>                                                
                                            </div>
                                        </div>
                                    </form>
                                }                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mb-5">
                        <h1 class="display-2 font-weight-medium">4<i class="bx bx-buoy bx-spin text-primary display-3"></i>4</h1>
                        <h4 class="text-uppercase">Sorry, page not found</h4>
                        @*<div class="mt-5 text-center">
                    <a class="btn btn-primary waves-effect waves-light" href=@Url.Action("Index", "index")>Back to Dashboard</a>
                    </div>*@
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div>
                        <img src="~/assets/images/error-img.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="container">
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <embed id="pdfFile" src="" frameborder="0" width="100%" height="100%">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!-- form mask -->
    <script src="~/assets/libs/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- form mask init -->
    <script src="~/assets/js/pages/form-mask.init.js"></script>
    <script>
        $(document).ready(function () {
            $.get('@Url.Action("_Index","BSFPrivateStages", new { id=Model.BSFPrivateId })', function (content) {
                $("#dynamicContentContainer").html(content);
                //notificationme('Fetch Record Successfully!');                
            });
        });
        function createModal(url) {
            $("#pdfFile").attr("src", url);
        }
    </script>
}
