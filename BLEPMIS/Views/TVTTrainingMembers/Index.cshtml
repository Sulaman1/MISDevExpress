@model IEnumerable<DAL.Models.Domain.Training.TVTTrainingMember>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TVTTraining)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.CNIC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TVTTrainingId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TVTTrainingMemberId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TVTTrainingMemberId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TVTTrainingMemberId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
