@model DAL.Models.Domain.Training.TVTTrainingMember
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using Constant.Constants
@{
    ViewData["Title"] = "Edit";
    ViewBag.pageTitle = "TVT Training";
    ViewBag.Title = "Member";
    ViewBag.pTitle = "Member";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<style>
     .modal-dialog {
        height: 90%; /* = 90% of the .modal-backdrop block = %90 of the screen */
    }

    .modal-content {
        height: 100%; /* = 100% of the .modal-dialog block */
    }

    #PdfModal {
        height: 100%;
    }
</style>
@{
    var yesno = new[]
         {   new SelectListItem { Text = "Yes", Value = "Yes" },
              new SelectListItem { Text = "No", Value = "No" },
              new SelectListItem { Text = "N/A", Value = "N/A" },
    };
}
@if (true)//AuthorizationService.AuthorizeAsync(User, Permissions.Administrator.View).Result.Succeeded || AuthorizationService.AuthorizeAsync(User, Permissions.CICIG.Edit).Result.Succeeded || AuthorizationService.AuthorizeAsync(User, Permissions.CICIG.Special).Result.Succeeded)
{
    <div class="checkout-tabs">
        <div class="row">        
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-privacy" role="tabpanel" aria-labelledby="v-pills-privacy-tab">
                                <div class="alert alert-info" style="padding: .40rem 1.25rem" role="alert">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <h4 class="mt-2 card-title">Edit Member Info</h4>
                                        </div>
                                    </div>
                                </div>
                                <form asp-action="Edit" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-3">        
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input type="hidden" asp-for="TVTTrainingMemberId" />                                            
                                            <input type="hidden" asp-for="MemberId" />
                                            <input type="hidden" asp-for="BeneficiaryMISCode" />
                                            <input type="hidden" asp-for="TVTTrainingId" />
                                            <input type="hidden" asp-for="CreatedOn" />
                                            <div class="form-group">
                                                <label asp-for="Age" class="control-label"></label>
                                                <input asp-for="Age" class="form-control" />
                                                <span asp-validation-for="Age" class="text-danger"></span>
                                            </div>                                            
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="PWD" class="control-label"></label>
                                                <select asp-for="PWD" asp-items="@yesno" class="form-control"></select>
                                                <span asp-validation-for="PWD" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="SelfEmployed" class="control-label"></label>
                                                <select asp-for="SelfEmployed" asp-items="@yesno" class="form-control"></select>
                                                <span asp-validation-for="SelfEmployed" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="BusinessName" class="control-label"></label>
                                                <input asp-for="BusinessName" class="form-control" />
                                                <span asp-validation-for="BusinessName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="RPL" class="control-label"></label>
                                                <select asp-for="RPL" asp-items="@yesno" class="form-control"></select>
                                                <span asp-validation-for="RPL" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="PreferredSkill1" class="control-label"></label>
                                                <input asp-for="PreferredSkill1" class="form-control" />
                                                <span asp-validation-for="PreferredSkill1" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="PreferredSkill2" class="control-label"></label>
                                                <input asp-for="PreferredSkill2" class="form-control" />
                                                <span asp-validation-for="PreferredSkill2" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="PreferredSkill3" class="control-label"></label>
                                                <input asp-for="PreferredSkill3" class="form-control" />
                                                <span asp-validation-for="PreferredSkill3" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="PreferredSkill4" class="control-label"></label>
                                                <input asp-for="PreferredSkill4" class="form-control" />
                                                <span asp-validation-for="PreferredSkill4" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="IdentifiedBy" class="control-label"></label>
                                                <input asp-for="IdentifiedBy" class="form-control" />
                                                @* <select required asp-for="IdentifiedBy" asp-items="ViewBag.IdentifiedById" class="form-control">
                                                    <option value=""> - - Select - -</option>
                                                </select> *@
                                                <span asp-validation-for="IdentifiedBy" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="Designation" class="control-label"></label>
                                                <input asp-for="Designation" class="form-control" />
                                               @*  <select required asp-for="Designation" asp-items="ViewBag.DesignationId" class="form-control">
                                                    <option value=""> - - Select - -</option>
                                                </select> *@
                                                <span asp-validation-for="Designation" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="EducationDocAttachment" class="control-label"></label>
                                                <input type="file" name="EducationDocAttachment" class="form-control" accept="application/pdf" />
                                                <span asp-validation-for="EducationDocAttachment" class="text-danger"></span>
                                            </div>                                           
                                        </div>
                                        @{
                                            if (Model.EducationDocAttachment != null)
                                            {
                                                <div class="col-md-3">
                                                    <div class="form-group" style="margin-bottom:0.5rem">
                                                        <label class="control-label">Uploaded Education Doc</label>
                                                    </div>
                                                    <div class="form-group">
                                                        <div data-toggle="modal" data-target="#myModal" onclick="createModal('@Model.EducationDocAttachment')" class="btn btn-info btn-sm"><i class="bx bxs-file label-icon"></i> View</div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="CNICAttachment" class="control-label"></label>
                                                <input type="file" name="CNICAttachment" class="form-control" accept="application/pdf" />
                                                <span asp-validation-for="CNICAttachment" class="text-danger"></span>
                                            </div>
                                        </div>
                                        @{
                                            if (Model.CNICAttachment != null)
                                            {
                                                <div class="col-md-3">
                                                    <div class="form-group" style="margin-bottom:0.5rem">
                                                        <label class="control-label">Uploaded CNIC</label>
                                                    </div>
                                                    <div class="form-group">
                                                        <div data-toggle="modal" data-target="#myModal" onclick="createModal('@Model.CNICAttachment')" class="btn btn-info btn-sm"><i class="bx bxs-file label-icon"></i> View</div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="AdmissionFormAttachment" class="control-label"></label>
                                                <input type="file" name="AdmissionFormAttachment" class="form-control" accept="application/pdf" />
                                                <span asp-validation-for="AdmissionFormAttachment" class="text-danger"></span>
                                            </div>                                           
                                        </div>
                                        @{
                                            if (Model.AdmissionFormAttachment != null)
                                            {
                                                <div class="col-md-3">
                                                    <div class="form-group" style="margin-bottom:0.5rem">
                                                        <label class="control-label">Uploaded Admission Form</label>
                                                    </div>
                                                    <div class="form-group">
                                                        <div data-toggle="modal" data-target="#myModal" onclick="createModal('@Model.AdmissionFormAttachment')" class="btn btn-info btn-sm"><i class="bx bxs-file label-icon"></i> View</div>
                                                    </div>
                                                </div>
                                            }
                                        }          
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <input type="submit" value="Save" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
}
else
{
    <div class="account-pages my-5 pt-5">
        <div class="container">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="text-center mb-5">
                                                    <h1 class="display-2 font-weight-medium">4<i class="bx bx-buoy bx-spin text-primary display-3"></i>4</h1>
                                                    <h4 class="text-uppercase">Sorry, page not found</h4>
                            @*<div class="mt-5 text-center">
                                            <a class="btn btn-primary waves-effect waves-light" href=@Url.Action("Index", "index")>Back to Dashboard</a>
                                            </div>*@
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <div class="col-md-8 col-xl-6">
                                                <div>
                                                    <img src="~/assets/images/error-img.png" alt="" class="img-fluid">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
    }
<div class="container">
                                <div id="myModal" class="modal fade" role="dialog">
                                    <div class="modal-dialog modal-lg">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                <embed id="pdfFile" src="" frameborder="0" width="100%" height="100%">
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

@section scripts{
    <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>
    <script src="~/assets/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <!-- bs custom file input plugin -->
    <script src="~/assets/libs/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/assets/js/pages/form-element.init.js"></script>
    <script>        
        function createModal(url) {
            $("#pdfFile").attr("src", url);
        }
    </script>
}