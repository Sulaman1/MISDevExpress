                                            </div>
                                            @{
                                            if(Model.AttendanceAttachment != null)
                                            {
                                                <div class="form-group">
                                                    <div class="form-group" style="margin-bottom:0.5rem">
                                                        <label class="control-label">Uploaded Attendance</label>                                                        
                                                    </div>
