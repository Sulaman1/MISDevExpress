@model IEnumerable<DAL.Models.Domain.Training.LIPAssetTransfer>



<div class="table-responsive">
    <table id="datatable1" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>
                LIP Code
            </th>
                <th style="width:400px">
                LIP Package
            </th>
            <th>
                Beneficiary
            </th>
                    <th>
                        CNIC
                    </th>
        
                    <th>
                        Gender
                    </th>
                <th style="width: 120px">
                        Is Refugee
                    </th>
                    <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width:120px">
                @Html.DisplayFor(modelItem => item.LIPCode)
            </td>
                        <td style="width:400px">
                            @Html.DisplayFor(modelItem => item.PictureAttachment1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PictureAttachment2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PictureAttachment3)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PictureAttachment4)
                        </td>
                        <td>
                        @if(item.MemberId == 1)
                        {
                            <span>No</span>
                        }
                        else
                        {
                            <span>Yes</span>
                        }
                    </td>
                        <td>               
                <a asp-controller="LIPAssetTransfers" asp-action="Details" asp-route-id="@item.LIPAssetTransferId" target="_blank">Details</a>                
            </td>
        </tr>
}
    </tbody>
</table>
</div>

<script>
    $(document).ready(function () {
        $('#datatable1').DataTable({
            "scrollY": "300px",
            "paging": false,
            "scrollCollapse": true,
        });
    });
</script>