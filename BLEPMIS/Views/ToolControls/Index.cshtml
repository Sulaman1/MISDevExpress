@model IEnumerable<DAL.Models.Domain.ToolApp.ToolControl>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Control)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tool)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Control.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tool.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ToolControlId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ToolControlId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ToolControlId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
